{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "tasks": [
        {
            "label": "g++ build active file",
            "linux": {
                "command": "g++",
                "args": [
                    "-I${fileDirname}/include", // for header files 
                    "-L${fileDirname}/lib", // for binary libraries (static (.a) and shared libraries (.so))
                    "-L${fileDirname}/bin", // for binary libraries (static (.a) and shared libraries (.so))
                    "-g",
                    "${file}",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}",
                    "-lglad",
                    "-lGLEW",
                    "-lglfw",
                    "-lassimp",
                    "-ldl",
                ],
                "options": {
                    "cwd": "/usr/bin"
                },
            },
            "windows": {
                "command": "C:\\MinGW\\bin\\g++.exe",
                "args": [
                    "-I${fileDirname}\\include", // include path for header
                    "-L${fileDirname}\\lib", // for binary libraries (static (.dll) and shared libraries (.lib))
                    "-L${fileDirname}\\bin", // for executables (and scripts) 
                    "-g",
                    "${fileDirname}\\glad.c",
                    "${file}",
                    "-o",
                    "${fileDirname}\\bin\\${fileBasenameNoExtension}.exe",
                    "-lGLEW",
                    "-lglfw3",
                    "-lassimp",
                ],
                "options": {
                    "cwd": "C:\\MinGW\\bin"
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "g++ run active file",
            "linux": {
                "command": "${fileDirname}/${fileBasenameNoExtension}"
            },
            "windows": {
                "command": "${fileDirname}\\bin\\${fileBasenameNoExtension}.exe"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
        },
        {
            "label": "g++ build & run active file",
            "linux": {
                "command": "g++",
                "args": [
                    "-I${fileDirname}/include", // for header files 
                    "-L${fileDirname}/lib", // for binary libraries (static (.a))
                    "-L${fileDirname}/bin", // for binary libraries (shared libraries (.so))
                    "-g",
                    "${file}",
                    "-o",
                    "${fileDirname}/bin/${fileBasenameNoExtension}",
                    "-lglad",
                    "-lGLEW",
                    "-lglfw",
                    "-lassimp",
                    "-ldl",
                    "&&",
                    "${fileDirname}/bin/${fileBasenameNoExtension}"
                ],
                "options": {
                    "cwd": "/usr/bin"
                },
            },
            "windows": {
                "command": "C:\\MinGW\\bin\\g++.exe",
                "args": [
                    "-I${fileDirname}\\include", // include path for header
                    "-L${fileDirname}\\lib", // for binary libraries (static (.lib))
                    "-L${fileDirname}\\bin", // for binary libraries (shared libraries (.dll))
                    "-g",
                    "${fileDirname}\\glad.c",
                    "${file}",
                    "-o",
                    "${fileDirname}\\bin\\${fileBasenameNoExtension}.exe",
                    "-lGLEW",
                    "-lglfw3",
                    "-lassimp",
                    "&&",
                    "${fileDirname}\\bin\\${fileBasenameNoExtension}.exe"
                ],
                "options": {
                    "cwd": "C:\\MinGW\\bin"
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}