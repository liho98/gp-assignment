{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "tasks": [
        {
            "label": "g++ build active file",
            "linux": {
                "command": "g++",
                "args": [
                    "-L${fileDirname}/lib", // linker for static library
                    "-g",
                    "${file}",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}",
                    "-lglad",
                    "-lGLEW",
                    "-lglfw",
                    "-lassimp",
                    "-ldl",
                    "&&",
                    "${fileDirname}/${fileBasenameNoExtension}"
                ],
                "options": {
                    "cwd": "/usr/bin"
                },
            },
            "windows": {
                "command": "D:\\MinGW\\bin\\g++.exe",
                "args": [
                    "-L${fileDirname}/lib", // linker for static library
                    "-g",
                    "${file}",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}",
                    "-lmingw32",
                    "-lopengl32",
                    "-lglu32",
                    "-lgdi32",
                    "-lfreeglut",
                ],
                "options": {
                    "cwd": "D:\\MinGW\\bin"
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "g++ run active file",
            "linux": {
                "command": "${fileDirname}/${fileBasenameNoExtension}"
            },
            "windows": {
                "command": "${fileDirname}/${fileBasenameNoExtension}.exe"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
        },
        {
            "label": "g++ build & run active file",
            "linux": {
                "command": "g++",
                "options": {
                    "cwd": "/usr/bin"
                },
            },
            "windows": {
                "command": "D:\\MinGW\\bin\\g++.exe",
                "options": {
                    "cwd": "D:\\MinGW\\bin"
                }
            },
            "args": [
                "-L${fileDirname}/lib", // linker for static library
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lglad",
                "-lGLEW",
                "-lglfw",
                "-lassimp",
                "-ldl",
                "&&",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}